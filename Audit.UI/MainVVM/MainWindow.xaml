<Window x:Class="Audit.UI.MainVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audit.UI.MainVVM"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="IT Auditor" Height="300" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ItemsControl Grid.Column="0" Grid.Row="1" prism:RegionManager.RegionName="NavigationRegion" />
        <ContentControl Grid.Column="1" Grid.Row="1" prism:RegionManager.RegionName="MainRegion"/>

    </Grid>
</Window>
